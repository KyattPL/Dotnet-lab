@page
@model Lab12.Pages.Article.DetailsModel;
@using System.Globalization;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @ViewData["artName"]
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            <div>
                $@ViewData["artPrice"]
            </div>
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @ViewData["artCategoryName"]
        </dd>
        <dt class = "col-sm-2">
            Picture
        </dt>
        <dd class = "col-sm-10">
            <img src="@ViewData["artPicture"]" alt="Image" />
        </dd>
    </dl>
</div>
<div>
    <a asp-page="/Article/Edit" asp-route-id="@ViewData["artId"]">Edit</a> |
    <a asp-page="/Article/Index">Back to List</a>
</div>
