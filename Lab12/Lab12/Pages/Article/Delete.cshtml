@page "{id}"
@model Lab12.Pages.Article.DeleteModel;
@using System.Globalization;

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @ViewData["artName"]
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            <div>
                $@ViewData["artPrice"]
            </div>
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @ViewData["artCategoryName"]
        </dd>
        <dt class = "col-sm-2">
            Picture
        </dt>
        <dd class = "col-sm-10">
            <img src="@ViewData["artPicture"]" alt="Image" />
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="@ViewData["artId"]" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Article/Index">Back to List</a>
    </form>
</div>
